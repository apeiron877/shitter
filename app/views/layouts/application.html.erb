<!DOCTYPE html>
<html>
  <head>
    <title>Shitter: It's Shitty Twitter! | <%= yield(:title) || "Welcome to Shitter" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
			<div id="top_nav">
			  <div id="top_nav_left">
					<div id="logo">
						<%= link_to (image_tag "shitter_logo.png", {:width => "350" }), '/' %>
					</div>
			  </div>
				<div id="top_nav_right">
					<div id="session_status">
						<% if user_signed_in? %>
							Signed in as <%= current_user.email %>. Not you? 
							<%= link_to "Sign out", destroy_user_session_path %>
						<% else %>
							<%= render :partial => "devise/sessions/login" %>
						<% end %>
					</div>
					<div id="top_buttons">
					<h2> It's Shitty Twitter!â„¢ </h2>
					</div>
				</div>
			</div>
			<hr>
			<div id="notices">
					<% flash.each do |name, msg| %>
						<%= content_tag :div, msg, :id => "flash_#{name}" %>
					<% end %>
		  </div>
			<div id="content">
					<%= content_tag :h1, yield(:title) if show_title? %>
					<%= yield %>
				</div>
			<div id="bottom_nav">
					<ul id="bottom_nav_list">
						<li><%= link_to "About", pages_about_path %></li>
						<li><%= link_to "Contact", pages_contact_path %></li>
					</ul>
		  </div>
    </div>
  </body>
</html>
