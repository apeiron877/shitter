<%= form_for("user", :url => user_session_path) do |f| %>
  <%= f.text_field :email, :class => "sign_up_field" %>
  <%= f.password_field :password, :class => "sign_up_field" %>
  <%= f.submit 'Sign in' %> </br>
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %>
  <%= link_to "Forgot your password?", new_password_path('user') %>
  
  
<% end %>
